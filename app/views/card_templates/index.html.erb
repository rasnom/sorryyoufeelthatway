<div class='container-fluid page'>

  <div class='row'>
    <div class='col'>
      <h1> Let them know what you really think </h1>
    </div>
  </div>
  <div class='row'>
    <div class='col'>
      <p>Custom handwritten notes delivered by post: $4.99</p>
    </div>
  </div>

  <div class='row images-area'>
    <% @templates.each do |template| %>
      <div class='col'>
        <a href='/card_templates/<%= template.id %>/cards/new'>
          <img
            id='<%= template.greeting %>-template'
            src='assets/<%= template.image_file %>'
            class='img-fluid img-thumbnail'
            alt='sorry template'
          >
        </a>
      </div>
    <% end %>
  </div>

</div>


