<%= @template.greeting %>

<%= form_for [@template, Card.new] do |f| %>
  <%= f.label :custom_message, "Custom Message" %>
  <%= f.text_field :custom_message %>
  <%= f.label :signature, "Signature" %>
  <%= f.text_field :signature %>
  <%= f.label :recipient_name, "Recipient Name" %>
  <%= f.text_field :recipient_name %>
  <%= f.label :street_address, "Address" %>
  <%= f.text_field :street_address %>
  <%= f.label :city, "City" %>
  <%= f.text_field :city %>
  <%= f.label :state, "State" %>
  <%= f.text_field :state %>
  <%= f.label :zip_code, "Zip Code" %>
  <%= f.text_field :zip_code %>
  <%= f.submit "Send Card" %>
<% end %>
